    <div id="backtop"><span>回到顶部</span></div>

    <script type='text/javascript'>
      $(document).ready(function(){
        $("#backtop").hide();
        $(window).scroll(function () {
          if ($(this).scrollTop() > 100) {
            $('#backtop').fadeIn();
          } else {
            $('#backtop').fadeOut();
          }
        });
        $('#backtop').click(function () {
          $('body,html').animate({
            scrollTop: 0
          }, 500);
        });
      });
    </script>
